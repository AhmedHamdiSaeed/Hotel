<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookings</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>

        <div class="container-fluid m-4">
        <h1>Bookings</h1>
        <table class=" table table-hover"id="bookingsTable">
            <thead>
                <tr>
                        <th scope="col">Customer Name</th>
                        <th scope="col">Check-in Date</th>
                        <th scope="col">Check-out Date</th>
                        <th scope="col">Number of Rooms</th>
                        <th scope="col">TotalPrice</th>
                </tr>
            </thead>
            <tbody>
                <!-- Data will be inserted here -->
            </tbody>
        </table>
    </div>

    <script>
        $(document).ready(function () {
            $.ajax({
                url: 'http://localhost:5161/api/Booking',
                type: 'GET',
                success: function (res) {
                    var rows = '';
                    console.log("data : ", res.data);
                    $.each(res.data, function (index, booking) {
                        rows += '<tr onclick="redirectToDetails(' + booking.id + ')">' +
                            '<td>' + booking.customer + '</td>' +
                            '<td>' + new Date(booking.checkInDate).toLocaleDateString() + '</td>' +
                            '<td>' + new Date(booking.checkOutDate).toLocaleDateString() + '</td>' +
                            '<td>' + booking.numOfRooms + '</td>' +
                            '<td>' + booking.totalPrice + '</td>' +                         
                            + '</tr>';
                    });
                    $('#bookingsTable tbody').html(rows);
                },
                error: function (xhr, status, error) {
                    alert('Error: ' + error);
                }
            });
        });

        function redirectToDetails(id) {
            var url = '@Url.Action("Details", "Booking")/' + id;
            window.location.href = url;
            console.log("inside func");
        }
    </script>
</body>
</html>
